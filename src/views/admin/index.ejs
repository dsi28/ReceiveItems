<h1>Admin Dashboard</h1>
<hr>
<hr>
<h2>Users</h2>
<%users.forEach((u)=>{%>

    <p><a href='/users/<%=u._id%>'><%=u.username%></a></p> 
    <a href='/users/<%=u._id%>/edit'>Edit</a>
    <form method='POST' action='/users/<%=u.id%>?_method=DELETE'>
        <input type='submit' value='Delete'>
    </form>
    <hr>
<%})%>
<hr>
<hr>
<h2>Admins</h2>
<%admins.forEach((a)=>{%>

    <p><a href='/users/<%=a._id%>'><%=a.username%></a></p> 
    <a href='/users/<%=a._id%>/edit'>Edit</a>
    <%if(a.id != currentUser.id){%>
    <form method='POST' action='/users/<%=a.id%>?_method=DELETE'>
        <input type='submit' value='Delete'>
    </form>
    <%}%>
    <hr>
<%})%>
<hr>
<hr>
<h2>Tasks</h2>
<%tasks.forEach((t)=>{%>

    <p><a href='/tasks/<%=t._id%>'><%=t.title%></a></p> 
    <a href='/tasks/<%=t._id%>/edit'>Edit</a>
    <form method='POST' action='/tasks/<%=t.id%>?_method=DELETE'>
        <input type='submit' value='Delete'>
    </form>
    <hr>
<%})%>