<h1>New comment for task: <%=task.title%></h1>

<form method='POST' action='/tasks/<%=task.id%>/comments'>
    <label for='username'>User</label>
    <input type='text' name='createdBy[username]' id='username' value='<%=currentUser.username%>' readonly>
    <input type='hidden' name='createdBy[id]' value='<%=currentUser.id%>'>
    <label for='text'>Comment:</label>
    <input type='text' name='comment[text]' id='comment' placeholder='comment text'>
    <input type='submit' value='Create'>
</form>