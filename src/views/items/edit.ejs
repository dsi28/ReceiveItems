<% include ../partials/header.ejs%>
<h1>Edit Item </h1>
<hr>
<form method='POST' action='/batches/<%=batch.id%>/items/<%=item.id%>?_method=PUT' enctype='multipart/form-data'>
    <label for='erpId'>Item ERP ID</label>
    <input type='text' name='item[erpId]' id='erpId' value='<%=item.erpId%>'>
    <label for='qty'>Quantity Recieved</label>
    <input type='text' name='item[addQuantity]' id='qty' value='<%=item.addQuantity%>'>
    <hr>
    <img src='<%=item.imageDisplay%>'>
    <hr>
    <label for='image'>Image</label>
    <input type='file' name='image' id='image' accept='images/*'>
    <input type='submit' value='Create'>
</form>
<% include ../partials/footer.ejs%>