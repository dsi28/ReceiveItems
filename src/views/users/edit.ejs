<h1>Edit user <%=user.username%></h1>
<form method='POST' action='/users/<%=user.id%>/edit?_method=PUT'>
<label for='username'>Username</label>
<input type='text' name='username' id='username' value='<%=user.username%>' required disabled>
<label for='email'>Email</label>
<input type='email' name='email' id='email' placeholder='email'>
<%if(currentUser && currentUser.role == 'admin' ){%>
    <label for='role'>Role</label>
    <select type='select' name='role'>
        <option value='standard'>User</option>
        <option value='strong'>Strong User</option>
        <option value='admin'>Admin</option>
    </select> 
<%}else{%>
    <label for='roleDisplay'>Role</label>
    <input type='text' name='role' id='roleDisplay' value='<%=user.role%>' disabled>
<%}%>
<button>Register</button>
</form>